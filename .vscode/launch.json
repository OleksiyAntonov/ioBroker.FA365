	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Mocha all tests",
			"skipFiles": [
				"<node_internals>/**"
			],
			"program": "${workspaceFolder}/node_modules/mocha/bin/mocha -r esm",
			"outFiles": [
				"${workspaceFolder}/**/*.js"
			],
			"args": [
				"--opts",
				"${workspaceFolder}/mocha.opts",
				"${workspaceRoot}/src/test/**/*.ts"
			],
			"cwd": "${workspaceRoot}",
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}